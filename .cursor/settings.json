{
  "editor": {
    "formatOnSave": true,
    "tabSize": 2,
    "insertSpaces": true,
    "wordWrap": "on"
  },
  "typescript": {
    "preferences": {
      "importModuleSpecifier": "non-relative",
      "quoteStyle": "single"
    }
  },
  "javascript": {
    "preferences": {
      "importModuleSpecifier": "non-relative",
      "quoteStyle": "single"
    }
  },
  "files": {
    "exclude": {
      "**/.git": true,
      "**/.next": true,
      "**/node_modules": true,
      "**/dist": true
    }
  },
  "search": {
    "exclude": {
      "**/node_modules": true,
      "**/bower_components": true,
      "**/*.code-search": true,
      "**/.next": true,
      "**/dist": true
    }
  }
} 